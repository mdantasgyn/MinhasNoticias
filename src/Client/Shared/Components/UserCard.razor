@namespace MinhasNoticias.Client.Shared.Components
<MudCard Elevation="0" Square="true" Class="@Class" Style="@Style">
    <MudCardHeader>
        <CardHeaderAvatar>
            @if (string.IsNullOrEmpty(ImageDataUrl))
            {
                <MudAvatar Color="Color.Secondary">@FirstLetterOfName</MudAvatar>
            }
            else
            {
                <MudAvatar Image="@ImageDataUrl" Style="height:50px; width:50px;"> </MudAvatar>
            }
        </CardHeaderAvatar>
        <CardHeaderContent>
            <MudText Typo="Typo.subtitle1" Color="Color.Default">@FirstName @SecondName</MudText>
            <MudText Typo="Typo.caption" Color="Color.Primary">@Email</MudText>
        </CardHeaderContent>
    </MudCardHeader>
</MudCard>