@inject Microsoft.Extensions.Localization.IStringLocalizer<AccountInfoModal> _localizer

<EditForm Model="@_accountInfoModel" OnValidSubmit="SubmitAsync">
    <FluentValidationValidator @ref="_fluentValidationValidator" />
    <MudDialog>
        <TitleContent>
            @{
                <MudText Typo="Typo.h6">
                    <MudIcon Icon="@Icons.Material.Filled.AccountCircle" Class="mr-3 mb-n1" />
                    @_localizer["Account Info"]
                </MudText>
            }
        </TitleContent>
        <DialogContent>
            <MudTextField For="@(() => _accountInfoModel.UserName)" @bind-Value="_accountInfoModel.UserName" Label="@_localizer["User Name"]" Placeholder="@_localizer["User Name"]" />
            <MudTextField For="@(() => _accountInfoModel.FirstName)" @bind-Value="_accountInfoModel.FirstName" Label="@_localizer["First Name"]" Placeholder="@_localizer["First Name"]" />
            <MudTextField For="@(() => _accountInfoModel.LastName)" @bind-Value="_accountInfoModel.LastName" Label="@_localizer["Last Name"]" Placeholder="@_localizer["Last Name"]" />
            <MudTextField For="@(() => _accountInfoModel.Email)" @bind-Value="_accountInfoModel.Email" Label="@_localizer["Email"]" Placeholder="@_localizer["Email"]" />
            <MudTextField For="@(() => _accountInfoModel.PhoneNumber)" @bind-Value="_accountInfoModel.PhoneNumber" Label="@_localizer["Phone Number"]" Placeholder="@_localizer["Phone Number"]" />
            <MudTextField Value="@_localizer["Password"]" Placeholder="@_localizer["Password"]" InputType="@_passwordInput" Adornment="Adornment.End" AdornmentIcon="@_passwordInputIcon" OnAdornmentClick="TogglePasswordVisibility" Label="@_localizer["Password"]" />
            <MudTextField Value="@_localizer["Confirm Password"]" Placeholder="@_localizer["Confirm Password"]" InputType="InputType.Password" Label="@_localizer["Confirm Password"]" />
        </DialogContent>
        <DialogActions>
            <MudButton Variant="Variant.Filled" OnClick="Cancel">@_localizer["Cancel"]</MudButton>
            @{
                <MudButton Variant="Variant.Filled" ButtonType="ButtonType.Submit" Disabled="@(!Validated)" Color="Color.Success">@_localizer["Update"]</MudButton>
            }
        </DialogActions>
    </MudDialog>
</EditForm>