@page "/products-2"
@inject Microsoft.Extensions.Localization.IStringLocalizer<Products2> _localizer

@if (!_loaded)
{
    <Spinner></Spinner>
}
else
{
    <MudPaper Elevation="3" Height="150" Class="px-4 mx-n4 mt-n10 py-10 mud-theme-primary" Style="border-radius: 0px 0px 45px 45px;" Outlined="false">
        <MudPaper Elevation="25" Class="d-flex flex-row pa-3 rounded-xl">
            <MudCardMedia Image="/images/delivery_icon.png" Style="height: 50px; width: 50px;" />
            <div class="d-flex flex-column justify-space-around mx-3">
                <MudText Typo="Typo.caption" Class="">Deliver to ></MudText>
                <MudText Typo="Typo.body1">123, Poseidon, CA 78000, LA...</MudText>
            </div>
        </MudPaper>
    </MudPaper>

    <MudPaper Class="mt-n7 my-3">
        <MudSelect T="Menu" @bind-Value="@menu" Class="my-0" Label="Choose your taste" Variant="Variant.Filled" ToStringFunc="@converter" OffsetY="true">
            <MudSelectItem Value="@(new Menu() { Name="Pizzas"})" />
            <MudSelectItem Value="@(new Menu() { Name="Burger"})" />
            <MudSelectItem Value="@(new Menu() { Name="Steak"})" />
            <MudSelectItem Value="@(new Menu() { Name="Snack"})" />
        </MudSelect>
    </MudPaper>

    @if (menu == null)
    {
        <MudText Class="mt-5 mb-3">Nothing selected yet...</MudText>
    }
    else
    {
        <MudText Color="Color.Default" Class="mt-5 mb-3" Typo="Typo.h6">@menu.Name</MudText>
    }

    <!-- Select menu item -->
    <MudGrid Class="mb-5" Spacing="2">
        @foreach (var item in _productItemMenu1)
        {
            <MudItem xs="12" sm="6" md="6">
                <MudCard Elevation="25" Class="d-flex flex-row rounded-xl" Style="height:150px;" @onclick="@(() => NavigateToProductDetail())">
                    <MudImage Elevation="1" Src="@item.Image" Class="rounded-lg align-self-center" Style="height:120px; min-width: 120px; max-width:120px;" />
                    <MudCardContent Class="d-flex justify-space-around flex-column py-2" Style="height:150px; width: 100%">
                        <MudText Typo="Typo.subtitle1" Style="font-weight: 500;" Color="@Color.Default">@item.ItemName</MudText>
                        <MudHidden Breakpoint="Breakpoint.MdAndUp" Invert="true">
                            <MudText Typo="Typo.body1">@item.Descriptions</MudText>
                        </MudHidden>
                        <MudHidden Breakpoint="Breakpoint.MdAndUp" Invert="false">
                            <MudText Typo="Typo.caption">@item.Descriptions</MudText>
                        </MudHidden>
                        <div class="d-flex flex-row justify-space-between">
                            <MudText Typo="Typo.subtitle1" Style="font-weight: 500;" Class="align-self-center" Color="@Color.Secondary">@item.Price</MudText>
                            <MudIconButton Icon="@Icons.Filled.AddCircleOutline" Class="align-self-center pa-0" Color="Color.Secondary" Size="Size.Medium" Variant="Variant.Text" OnClick="NavigateToProductDetail"></MudIconButton>
                        </div>
                    </MudCardContent>
                </MudCard>
            </MudItem>
        }
    </MudGrid>

    <!--Menu #2-->
