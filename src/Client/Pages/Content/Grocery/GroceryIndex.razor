@page "/grocery"
@inject Microsoft.Extensions.Localization.IStringLocalizer<GroceryIndex> _localizer

@if (!_loaded)
{
    <Spinner></Spinner>
}
else
{
<MudPaper Elevation="3" Height="150" Class="px-4 mx-n4 mt-n10 pt-10 mud-theme-primary" Style="border-radius: 0px 0px 35px 35px;" Outlined="false">
    <MudPaper Elevation="0" Class="py-6" Style="background-color: transparent">

    </MudPaper>
</MudPaper>

<MudGrid Class="mt-n15 pt-0 mb-1">
    <MudItem xs="12">
        <MudCard Elevation="25" Class="rounded-lg">
            <MudCardContent>
                <MudText Color="Color.Default" Align="Align.Left" Typo="Typo.body1" Style="font-weight: 400;">Prebuilt Fruits Grocery pages for your Web or Mobile apps. Built using blocks and are highly flexible and customizable.</MudText>
            </MudCardContent>
        </MudCard>
    </MudItem>
</MudGrid>

<MudGrid Class="mb-5" Spacing="2">
    <MudItem xs="12" sm="12" md="12">
        <MudCard Elevation="25" Class="d-flex flex-row py-5 rounded-lg" @onclick="@(() => NavigateToHomePage())">
            <MudIcon Icon="fal fa-apple-alt" Color="Color.Tertiary" Class="mx-3 align-self-center fa-2x"></MudIcon>
            <MudText Typo="Typo.subtitle1" Style="font-weight: 500;" Class="align-self-center" Color="@Color.Default"> Homepage </MudText>
            <MudIcon Icon="@Icons.Material.TwoTone.ArrowRight" Color="Color.Default" Class="mx-3 ml-auto align-self-center" Size="Size.Medium"></MudIcon>
        </MudCard>
    </MudItem>

    <MudItem xs="12" sm="12" md="12">
        <MudCard Elevation="25" Class="d-flex flex-row py-5 rounded-lg" @onclick="@(() => NavigateToCategoriesPage())">
            <MudIcon Icon="fal fa-boxes" Color="Color.Warning" Class="mx-3 align-self-center fa-2x"></MudIcon>
            <MudText Typo="Typo.subtitle1" Style="font-weight: 500;" Class="align-self-center" Color="@Color.Default"> Categories </MudText>
            <MudIcon Icon="@Icons.Material.TwoTone.ArrowRight" Color="Color.Default" Class="mx-3 ml-auto align-self-center" Size="Size.Medium"></MudIcon>
        </MudCard>
    </MudItem>

    <MudItem xs="12" sm="12" md="12">
        <MudCard Elevation="25" Class="d-flex flex-row py-5 rounded-lg"  @onclick="@(() => NavigateToProductPage1())">
            <MudIcon Icon="fal fa-table" Color="Color.Success" Class="mx-3 align-self-center fa-2x"></MudIcon>
            <MudText Typo="Typo.subtitle1" Style="font-weight: 500;" Class="align-self-center" Color="@Color.Default"> Products Grid </MudText>
            <MudIcon Icon="@Icons.Material.TwoTone.ArrowRight" Color="Color.Default" Class="mx-3 ml-auto align-self-center" Size="Size.Medium"></MudIcon>
        </MudCard>
    </MudItem>

    <MudItem xs="12" sm="12" md="12">
        <MudCard Elevation="25" Class="d-flex flex-row py-5 rounded-lg" @onclick="@(() => NavigateToProductPage2())">
            <MudIcon Icon="fal fa-list-alt" Color="Color.Secondary" Class="mx-3 align-self-center fa-2x"></MudIcon>
            <MudText Typo="Typo.subtitle1" Style="font-weight: 500;" Class="align-self-center" Color="@Color.Default"> Products List </MudText>
            <MudIcon Icon="@Icons.Material.TwoTone.ArrowRight" Color="Color.Default" Class="mx-3 ml-auto align-self-center" Size="Size.Medium"></MudIcon>
        </MudCard>
    </MudItem>

    <MudItem xs="12" sm="12" md="12">
        <MudCard Elevation="25" Class="d-flex flex-row py-5 rounded-lg" @onclick="@(() => NavigateToProductDetailPage1())">
            <MudIcon Icon="fal fa-carrot" Color="Color.Tertiary" Class="mx-3 align-self-center fa-2x"></MudIcon>
            <MudText Typo="Typo.subtitle1" Style="font-weight: 500;" Class="align-self-center" Color="@Color.Default"> Product Detail 1</MudText>
            <MudIcon Icon="@Icons.Material.TwoTone.ArrowRight" Color="Color.Default" Class="mx-3 ml-auto align-self-center" Size="Size.Medium"></MudIcon>
        </MudCard>
    </MudItem>

    <MudItem xs="12" sm="12" md="12">
        <MudCard Elevation="25" Class="d-flex flex-row py-5 rounded-lg" @onclick="@(() => NavigateToProductDetailPage2())">
            <MudIcon Icon="fal fa-pepper-hot" Color="Color.Primary" Class="mx-3 align-self-center fa-2x"></MudIcon>
            <MudText Typo="Typo.subtitle1" Style="font-weight: 500;" Class="align-self-center" Color="@Color.Default"> Product Detail 2</MudText>
            <MudIcon Icon="@Icons.Material.TwoTone.ArrowRight" Color="Color.Default" Class="mx-3 ml-auto align-self-center" Size="Size.Medium"></MudIcon>
        </MudCard>
    </MudItem>

    <MudItem xs="12" sm="12" md="12">
        <MudCard Elevation="25" Class="d-flex flex-row py-5 rounded-lg"  @onclick="@(() => NavigateToCartPage())">
            <MudIcon Icon="fal fa-shopping-bag" Color="Color.Info" Class="mx-3 align-self-center fa-2x"></MudIcon>
            <MudText Typo="Typo.subtitle1" Style="font-weight: 500;" Class="align-self-center" Color="@Color.Default"> Cart </MudText>
            <MudIcon Icon="@Icons.Material.TwoTone.ArrowRight" Color="Color.Default" Class="mx-3 ml-auto align-self-center" Size="Size.Medium"></MudIcon>
        </MudCard>
    </MudItem>

    <MudItem xs="12" sm="12" md="12">
        <MudCard Elevation="25" Class="d-flex flex-row py-5 rounded-lg"  @onclick="@(() => NavigateToCheckoutPage())">
            <MudIcon Icon="fal fa-credit-card" Color="Color.Secondary" Class="mx-3 align-self-center fa-2x"></MudIcon>
            <MudText Typo="Typo.subtitle1" Style="font-weight: 500;" Class="align-self-center" Color="@Color.Default"> Checkout </MudText>
            <MudIcon Icon="@Icons.Material.TwoTone.ArrowRight" Color="Color.Default" Class="mx-3 ml-auto align-self-center" Size="Size.Medium"></MudIcon>
        </MudCard>
    </MudItem>
</MudGrid>
}