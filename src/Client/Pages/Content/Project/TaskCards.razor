                            <MudAvatar Image="/images/pictures/faces/3s.png" />
                            <MudAvatar Image="/images/pictures/faces/4s.png" />
                        </MudAvatarGroup>
                        <div class="d-flex flex-column">
                            <MudChip Color="Color.Tertiary" Size="Size.Small">Low</MudChip>
                            <MudChip Color="Color.Error" Size="Size.Small">Pending</MudChip>
                        </div>
                    </div>
                </MudItem>

                <MudItem xs="12" sm="12" md="12">
                    <MudDivider Class="my-3"></MudDivider>
                </MudItem>

                <MudItem xs="12" sm="12" md="12">
                    <MudProgressLinear Color="Color.Primary" Value="35" Min="0" Max="100" />
                </MudItem>

                <MudItem xs="12" sm="12" md="12">
                    <MudDivider Class="my-3"></MudDivider>
                </MudItem>

                <MudItem xs="12">
                    <MudText Typo="Typo.caption">Start Time 09:00, 15th June </MudText>
                </MudItem>

            </MudGrid>
        </MudCardContent>
    </MudCard>
}