@page "/project"
@inject Microsoft.Extensions.Localization.IStringLocalizer<ProjectIndex> _localizer

@if (!_loaded)
{
    <Spinner></Spinner>
}
else
{
<MudPaper Elevation="3" Height="150" Class="px-4 mx-n4 mt-n10 pt-10 mud-theme-primary" Style="border-radius: 0px 0px 35px 35px;" Outlined="false">
    <MudPaper Elevation="0" Class="py-6" Style="background-color: transparent">

    </MudPaper>
</MudPaper>

<MudGrid Class="mt-n15 pt-0 mb-1">
    <MudItem xs="12">
        <MudCard Elevation="25" Class="rounded-lg">
            <MudCardContent>
                <MudText Color="Color.Default" Align="Align.Left" Typo="Typo.body2" Style="font-weight: 400;">Prebuilt Project/ Tasks pages for your Web or Mobile apps.</MudText>
            </MudCardContent>
        </MudCard>
    </MudItem>
</MudGrid>

<MudGrid Class="mb-5" Spacing="2">
    <MudItem xs="12" sm="12" md="12">
        <MudCard Elevation="25" Class="d-flex flex-row rounded-lg" @onclick="@(() => NavigateToHome1())">
            <MudIcon Icon="@Icons.Material.TwoTone.Home" Color="Color.Warning" Class="mx-3 my-5 align-self-center" Size="Size.Large"></MudIcon>
            <MudText Typo="Typo.subtitle1" Style="font-weight: 500;" Class="align-self-center" Color="@Color.Default"> Home page 1 </MudText>
            <MudIcon Icon="@Icons.Material.TwoTone.ArrowRight" Color="Color.Default" Class="mx-3 ml-auto align-self-center" Size="Size.Medium"></MudIcon>
        </MudCard>
    </MudItem>

    <MudItem xs="12" sm="12" md="12">
        <MudCard Elevation="25" Class="d-flex flex-row rounded-lg" @onclick="@(() => NavigateToHome2())">
            <MudIcon Icon="@Icons.Material.TwoTone.Home" Color="Color.Error" Class="mx-3 my-5 align-self-center" Size="Size.Large"></MudIcon>
            <MudText Typo="Typo.subtitle1" Style="font-weight: 500;" Class="align-self-center" Color="@Color.Default"> Home page 2 </MudText>
            <MudIcon Icon="@Icons.Material.TwoTone.ArrowRight" Color="Color.Default" Class="mx-3 ml-auto align-self-center" Size="Size.Medium"></MudIcon>
        </MudCard>
    </MudItem>

    <MudItem xs="12" sm="12" md="12">
        <MudCard Elevation="25" Class="d-flex flex-row rounded-lg" @onclick="@(() => NavigateToHome3())">
            <MudIcon Icon="@Icons.Material.TwoTone.Home" Color="Color.Secondary" Class="mx-3 my-5 align-self-center" Size="Size.Large"></MudIcon>
            <MudText Typo="Typo.subtitle1" Style="font-weight: 500;" Class="align-self-center" Color="@Color.Default"> Home page 3 </MudText>
            <MudIcon Icon="@Icons.Material.TwoTone.ArrowRight" Color="Color.Default" Class="mx-3 ml-auto align-self-center" Size="Size.Medium"></MudIcon>
        </MudCard>
    </MudItem>

    <MudItem xs="12" sm="12" md="12">
        <MudCard Elevation="25" Class="d-flex flex-row rounded-lg" @onclick="@(() => NavigateToProject1())">
            <MudIcon Icon="@Icons.Material.TwoTone.Task" Color="Color.Primary" Class="mx-3 my-5 align-self-center" Size="Size.Large"></MudIcon>
            <MudText Typo="Typo.subtitle1" Style="font-weight: 500;" Class="align-self-center" Color="@Color.Default"> Project 1 </MudText>
            <MudIcon Icon="@Icons.Material.TwoTone.ArrowRight" Color="Color.Default" Class="mx-3 ml-auto align-self-center" Size="Size.Medium"></MudIcon>
        </MudCard>
    </MudItem>

    <MudItem xs="12" sm="12" md="12">
        <MudCard Elevation="25" Class="d-flex flex-row rounded-lg" @onclick="@(() => NavigateToProject2())">
            <MudIcon Icon="@Icons.Material.TwoTone.NetworkCell" Color="Color.Info" Class="mx-3 my-5 align-self-center" Size="Size.Large"></MudIcon>
            <MudText Typo="Typo.subtitle1" Style="font-weight: 500;" Class="align-self-center" Color="@Color.Default"> Project 2 </MudText>
            <MudIcon Icon="@Icons.Material.TwoTone.ArrowRight" Color="Color.Default" Class="mx-3 ml-auto align-self-center" Size="Size.Medium"></MudIcon>
        </MudCard>
    </MudItem>

    <MudItem xs="12" sm="12" md="12">
        <MudCard Elevation="25" Class="d-flex flex-row rounded-lg" @onclick="@(() => NavigateToTaskCards())">
            <MudIcon Icon="@Icons.Material.TwoTone.AddTask" Color="Color.Secondary" Class="mx-3 my-5 align-self-center" Size="Size.Large"></MudIcon>
            <MudText Typo="Typo.subtitle1" Style="font-weight: 500;" Class="align-self-center" Color="@Color.Default"> Task Cards </MudText>
            <MudIcon Icon="@Icons.Material.TwoTone.ArrowRight" Color="Color.Default" Class="mx-3 ml-auto align-self-center" Size="Size.Medium"></MudIcon>
        </MudCard>
    </MudItem>

    @*<MudItem xs="12" sm="12" md="12">
        <MudCard Elevation="25" Class="d-flex flex-row rounded-lg" @onclick="@(() => NavigateToTaskList())">
            <MudIcon Icon="@Icons.Material.TwoTone.List" Color="Color.Secondary" Class="mx-3 my-5 align-self-center" Size="Size.Large"></MudIcon>
            <MudText Typo="Typo.subtitle1" Style="font-weight: 500;" Class="align-self-center" Color="@Color.Default"> Task List </MudText>
            <MudIcon Icon="@Icons.Material.TwoTone.ArrowRight" Color="Color.Default" Class="mx-3 ml-auto align-self-center" Size="Size.Medium"></MudIcon>
        </MudCard>
    </MudItem>*@

    <MudItem xs="12" sm="12" md="12">
        <MudCard Elevation="25" Class="d-flex flex-row rounded-lg" @onclick="@(() => NavigateToTaskCategories())">
            <MudIcon Icon="@Icons.Material.TwoTone.AddBox" Color="Color.Warning" Class="mx-3 my-5 align-self-center" Size="Size.Large"></MudIcon>
            <MudText Typo="Typo.subtitle1" Style="font-weight: 500;" Class="align-self-center" Color="@Color.Default"> Task Categories </MudText>
            <MudIcon Icon="@Icons.Material.TwoTone.ArrowRight" Color="Color.Default" Class="mx-3 ml-auto align-self-center" Size="Size.Medium"></MudIcon>
        </MudCard>
    </MudItem>

    <MudItem xs="12" sm="12" md="12">
        <MudCard Elevation="25" Class="d-flex flex-row rounded-lg" @onclick="@(() => NavigateToToDoList())">
            <MudIcon Icon="@Icons.Material.TwoTone.Checklist" Color="Color.Warning" Class="mx-3 my-5 align-self-center" Size="Size.Large"></MudIcon>
            <MudText Typo="Typo.subtitle1" Style="font-weight: 500;" Class="align-self-center" Color="@Color.Default"> To-Do List </MudText>
            <MudIcon Icon="@Icons.Material.TwoTone.ArrowRight" Color="Color.Default" Class="mx-3 ml-auto align-self-center" Size="Size.Medium"></MudIcon>
        </MudCard>
    </MudItem>
</MudGrid>
}