@page "/travel"
@inject Microsoft.Extensions.Localization.IStringLocalizer<TravelIndex> _localizer

@if (!_loaded)
{
    <Spinner></Spinner>
}
else
{
    <MudPaper Elevation="3" Height="150" Class="px-4 mx-n4 mt-n10 pt-10 mud-theme-primary" Style="border-radius: 0px 0px 35px 35px;" Outlined="false">
        <MudPaper Elevation="0" Class="py-6" Style="background-color: transparent">

        </MudPaper>
    </MudPaper>

    <MudGrid Class="mt-n15 pt-0 mb-3" Spacing="2">
        <MudItem xs="12">
            <MudCard Elevation="25" Class="rounded-xl py-2">
                <MudCardContent>
                    <MudText Color="Color.Default" Align="Align.Left" Typo="Typo.body2">Awesome pre-built pages that are highly customizable and blazing fast to load.<br>Templates that are categorized by purpose to make it easier for you to use.</MudText>
                </MudCardContent>
            </MudCard>
        </MudItem>
    </MudGrid>

    <MudGrid Class="mb-5" Spacing="3">
        <MudItem xs="6" sm="6" md="6">
            <MudCard Elevation="25" Class="rounded-lg" Style="" @onclick="@(() => NavigateToHomePage())">
                <MudCardContent Class="d-flex flex-column pa-3" Style="">
                    <MudImage Src="images/travel/pr-1.png" Class="rounded-sm" Fluid="true" />
                    <MudText Typo="Typo.subtitle2" Style="font-weight: 600;" Class="mt-3 align-self-center" Color="@Color.Surface"> Home Page </MudText>
                </MudCardContent>
            </MudCard>
        </MudItem>
        <MudItem xs="6" sm="6" md="6">
            <MudCard Elevation="25" Class="rounded-lg" Style="" @onclick="@(() => NavigateToPlaceListingPage())">
                <MudCardContent Class="d-flex flex-column pa-3" Style="">
                    <MudImage Src="images/travel/pr-2.png" Class="rounded-sm" Fluid="true" />
                    <MudText Typo="Typo.subtitle2" Style="font-weight: 600;" Class="mt-3 align-self-center" Color="@Color.Surface"> Place Listing </MudText>
                </MudCardContent>
            </MudCard>
        </MudItem>
        <MudItem xs="6" sm="6" md="6">
            <MudCard Elevation="25" Class="rounded-lg" Style="" @onclick="@(() => NavigateToExperiencesPage())">
                <MudCardContent Class="d-flex flex-column pa-3" Style="">
                    <MudImage Src="images/travel/pr-3.png" Class="rounded-sm" Fluid="true" />
                    <MudText Typo="Typo.subtitle2" Style="font-weight: 600;" Class="mt-3 align-self-center" Color="@Color.Surface"> Experience Tours </MudText>
                </MudCardContent>
            </MudCard>
        </MudItem>
        <MudItem xs="6" sm="6" md="6">
            <MudCard Elevation="25" Class="rounded-lg" Style="" @onclick="@(() => NavigateToRoomBookingPage())">
                <MudCardContent Class="d-flex flex-column pa-3" Style="">
                    <MudImage Src="images/travel/pr-4.png" Class="rounded-sm" Fluid="true" />
                    <MudText Typo="Typo.subtitle2" Style="font-weight: 600;" Class="mt-3 align-self-center" Color="@Color.Surface"> Room Booking </MudText>
                </MudCardContent>
            </MudCard>
        </MudItem>
        <MudItem xs="6" sm="6" md="6">
            <MudCard Elevation="25" Class="rounded-lg" Style="" @onclick="@(() => NavigateToTourDetailsPage())">
                <MudCardContent Class="d-flex flex-column pa-3" Style="">
                    <MudImage Src="images/travel/pr-5.png" Class="rounded-sm" Fluid="true" />
                    <MudText Typo="Typo.subtitle2" Style="font-weight: 600;" Class="mt-3 align-self-center" Color="@Color.Surface"> Tour Details </MudText>
                </MudCardContent>
            </MudCard>
        </MudItem>
        <MudItem xs="6" sm="6" md="6">
            <MudCard Elevation="25" Class="rounded-lg" Style="" @onclick="@(() => NavigateToConfirmationPage())">
                <MudCardContent Class="d-flex flex-column pa-3" Style="">
                    <MudImage Src="images/travel/pr-6.png" Class="rounded-sm" Fluid="true" />
                    <MudText Typo="Typo.subtitle2" Style="font-weight: 600;" Class="mt-3 align-self-center" Color="@Color.Surface"> Payment Page </MudText>
                </MudCardContent>
            </MudCard>
        </MudItem>
        @*<MudItem xs="6" sm="6" md="6">
            <MudCard Elevation="25" Class=" rounded-lg" Style="">
                <MudCardContent Class="d-flex flex-column pa-3" Style="">
                    <MudImage Src="images/pictures/5l.jpg" Class="rounded-sm" Style="height: 150px; width: 100%;" />
                    <MudText Typo="Typo.subtitle2" Style="font-weight: 600;" Class="mt-3 align-self-center" Color="@Color.Surface"> Account Page </MudText>
                </MudCardContent>
            </MudCard>
        </MudItem>
        <MudItem xs="6" sm="6" md="6">
            <MudCard Elevation="25" Class="rounded-lg" Style="">
                <MudCardContent Class="d-flex flex-column pa-3" Style="">
                    <MudImage Src="images/pictures/6l.jpg" Class="rounded-sm" Style="height: 150px; width: 100%;" />
                    <MudText Typo="Typo.subtitle2" Style="font-weight: 600;" Class="mt-3 align-self-center" Color="@Color.Surface"> Settings Page </MudText>
                </MudCardContent>
            </MudCard>
        </MudItem>*@
    </MudGrid>
}