@page "/onboarding-index"
@inject Microsoft.Extensions.Localization.IStringLocalizer<OnboardingIndex> _localizer

@if (!_loaded)
{
    <Spinner></Spinner>
}
else
{
    <MudPaper Elevation="3" Height="150" Class="px-4 mx-n4 mt-n10 pt-10 mud-theme-primary" Style="border-radius: 0px 0px 35px 35px;" Outlined="false">
        <MudPaper Elevation="0" Class="py-6" Style="background-color: transparent">

        </MudPaper>
    </MudPaper>

    <MudGrid Class="mt-n15">
        <MudItem xs="12">
            <MudCard Elevation="25" Outlined="false" Class="rounded-lg">
                <MudCardContent>
                    <MudText Color="Color.Default" Typo="Typo.body1" Style="font-weight: 400;">Prebuilt Walkthrough pages for your Web or Mobile apps. Built using blocks and are highly flexible and customizable.</MudText>
                </MudCardContent>
            </MudCard>
        </MudItem>
    </MudGrid>

    <MudGrid Class="mt-3" Spacing="2">
        <MudItem xs="12" sm="12" md="12">
            <MudCard Elevation="25" Outlined="false" Class="d-flex flex-row py-5 rounded-lg" @onclick="@(() => NavigateToGrandientPage())">
                <MudIcon Icon="fad fa-circle" Color="Color.Tertiary" Class="mx-4 align-self-center fa-2x"></MudIcon>
                <MudText Typo="Typo.subtitle1" Style="font-weight: 500;" Class="align-self-center" Color="@Color.Default"> Walkthrough Gradient </MudText>
                <MudIcon Icon="@Icons.Material.TwoTone.ArrowRight" Color="Color.Default" Class="mx-3 ml-auto align-self-center" Size="Size.Medium"></MudIcon>
            </MudCard>
        </MudItem>

        <MudItem xs="12" sm="12" md="12">
            <MudCard Elevation="25" Outlined="false" Class="d-flex flex-row py-5 rounded-lg" @onclick="@(() => NavigateToIllustrationPage())">
                <MudIcon Icon="fad fa-heart-circle" Color="Color.Error" Class="mx-4 align-self-center fa-2x"></MudIcon>
                <MudText Typo="Typo.subtitle1" Style="font-weight: 500;" Class="align-self-center" Color="@Color.Default"> Walkthrough Illustration </MudText>
                <MudIcon Icon="@Icons.Material.TwoTone.ArrowRight" Color="Color.Default" Class="mx-3 ml-auto align-self-center" Size="Size.Medium"></MudIcon>
            </MudCard>
        </MudItem>

        <MudItem xs="12" sm="12" md="12">
            <MudCard Elevation="25" Outlined="false" Class="d-flex flex-row py-5 rounded-lg"  @onclick="@(() => NavigateToImagePage())">
                <MudIcon Icon="fad fa-play-circle" Color="Color.Success" Class="mx-4 align-self-center fa-2x"></MudIcon>
                <MudText Typo="Typo.subtitle1" Style="font-weight: 500;" Class="align-self-center" Color="@Color.Default"> Walkthrough Image </MudText>
                <MudIcon Icon="@Icons.Material.TwoTone.ArrowRight" Color="Color.Default" Class="mx-3 ml-auto align-self-center" Size="Size.Medium"></MudIcon>
            </MudCard>
        </MudItem>

        <MudItem xs="12" sm="12" md="12">
            <MudCard Elevation="25" Outlined="false" Class="d-flex flex-row py-5 rounded-lg" @onclick="@(() => NavigateToMinimalPage())">
                <MudIcon Icon="fad fa-scrubber" Color="Color.Primary" Class="mx-4 align-self-center fa-2x"></MudIcon>
                <MudText Typo="Typo.subtitle1" Style="font-weight: 500;" Class="align-self-center" Color="@Color.Default"> Walkthrough Minimal </MudText>
                <MudIcon Icon="@Icons.Material.TwoTone.ArrowRight" Color="Color.Default" Class="mx-3 ml-auto align-self-center" Size="Size.Medium"></MudIcon>
            </MudCard>
        </MudItem>

        <MudItem xs="12" sm="12" md="12">
            <MudCard Elevation="25" Outlined="false" Class="d-flex flex-row py-5 rounded-lg" @onclick="@(() => NavigateToFlatPage())">
                <MudIcon Icon="fad fa-heart" Color="Color.Warning" Class="mx-4 align-self-center fa-2x"></MudIcon>
                <MudText Typo="Typo.subtitle1" Style="font-weight: 500;" Class="align-self-center" Color="@Color.Default"> Walkthrough Flat </MudText>
                <MudIcon Icon="@Icons.Material.TwoTone.ArrowRight" Color="Color.Default" Class="mx-3 ml-auto align-self-center" Size="Size.Medium"></MudIcon>
            </MudCard>
        </MudItem>

        <MudItem xs="12" sm="12" md="12">
            <MudCard Elevation="25" Outlined="false" Class="d-flex flex-row py-5 rounded-lg" @onclick="@(() => NavigateToVariantPage())">
                <MudIcon Icon="fad fa-brush" Color="Color.Secondary" Class="mx-4 align-self-center fa-2x"></MudIcon>
                <MudText Typo="Typo.subtitle1" Style="font-weight: 500;" Class="align-self-center" Color="@Color.Default"> Walkthrough Variant </MudText>
                <MudIcon Icon="@Icons.Material.TwoTone.ArrowRight" Color="Color.Default" Class="mx-3 ml-auto align-self-center" Size="Size.Medium"></MudIcon>
            </MudCard>
        </MudItem>

        <MudItem xs="12" sm="12" md="12">
            <MudCard Elevation="25" Outlined="false" Class="d-flex flex-row py-5 rounded-lg"  @onclick="@(() => NavigateToVideoPage())">
                <MudIcon Icon="fad fa-palette" Color="Color.Info" Class="mx-4 align-self-center fa-2x"></MudIcon>
                <MudText Typo="Typo.subtitle1" Style="font-weight: 500;" Class="align-self-center" Color="@Color.Default"> Walkthrough Video </MudText>
                <MudIcon Icon="@Icons.Material.TwoTone.ArrowRight" Color="Color.Default" Class="mx-3 ml-auto align-self-center" Size="Size.Medium"></MudIcon>
            </MudCard>
        </MudItem>

        <MudItem xs="12" sm="12" md="12">
            <MudCard Elevation="25" Outlined="false" Class="d-flex flex-row py-5 rounded-lg" @onclick="@(() => NavigateToWelcomePage())">
                <MudIcon Icon="fad fa-coffee" Color="Color.Tertiary" Class="mx-4 align-self-center fa-2x"></MudIcon>
                <MudText Typo="Typo.subtitle1" Style="font-weight: 500;" Class="align-self-center" Color="@Color.Default"> Welcome Page </MudText>
                <MudIcon Icon="@Icons.Material.TwoTone.ArrowRight" Color="Color.Default" Class="mx-3 ml-auto align-self-center" Size="Size.Medium"></MudIcon>
            </MudCard>
        </MudItem>
    </MudGrid>
}