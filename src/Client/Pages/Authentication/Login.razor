@page "/login"
@layout MainLayout
@attribute [AllowAnonymous]
@inject Microsoft.Extensions.Localization.IStringLocalizer<Login> _localizer

    <div class="login-one">
        <div class="d-flex justify-center">
            <MudContainer Class="mt-10" MaxWidth="MaxWidth.Small">
                <MudPaper Class="rounded-lg pa-5">
                    <EditForm Model="@_tokenModel" OnValidSubmit="SubmitAsync">
                                    <FluentValidationValidator DisableAssemblyScanning @ref="_fluentValidationValidator" />
                                    <MudGrid Spacing="1">
                                        <MudItem xs="12">
                                            <div class="d-flex justify-center">
                                               <MinhasNoticiasLogo />
                                            </div>
                                        </MudItem>
                                        <MudItem xs="12">
                                            <div class="d-flex justify-center mb-5">
                                                <MudLink Href="/landing" Color="Color.Primary" Typo="Typo.h5" Style="font-weight: 600;">Minhas Noticias</MudLink>
                                            </div>
                                        </MudItem>
                                        <DataAnnotationsValidator />
                                        <MudItem xs="12">
                                            <MudTextField T="string" Label="Usuário" Variant="Variant.Filled" Margin="Margin.Dense"
                                                          @bind-Value="_tokenModel.Email" For="@(() => _tokenModel.Email)" AdornmentColor="Color.Primary" Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.TwoTone.Email" />
                                        </MudItem>
                                        <MudItem xs="12">
                                            <MudTextField Label="Senha" Variant="Variant.Filled" Margin="Margin.Dense"
                                                          @bind-Value="_tokenModel.Password" For="@(() => _tokenModel.Password)"
                                                          InputType="@_passwordInput" AdornmentColor="Color.Primary" Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.TwoTone.Lock" />
                                        </MudItem>
                                        <MudItem xs="12" Class="mt-n2 d-flex justify-space-between align-center">
                                            <MudCheckBox T="bool" Label="@_localizer["Remember me?"]" Color="Color.Primary" Class="ml-n3"></MudCheckBox>
                                            <MudLink Underline="Underline.Hover" Typo="Typo.body2" Href="/account/forgot-password">@_localizer["Forgot password?"]</MudLink>
                                        </MudItem>
                                        <MudItem xs="12" Class="d-flex justify-center mb-3">
                                            <MudButton ButtonType="ButtonType.Submit" FullWidth="true" Variant="Variant.Filled" Disabled="@(!Validated)" Color="Color.Primary" Size="Size.Large">Entrar</MudButton>
                                        </MudItem>
                                    </MudGrid>
                                </EditForm>
@*                                <div class="d-flex flex-row justify-center mt-5">
                                    <MudText Class="align-self-center mr-2" Color="Color.Inherit" Typo="Typo.body2" Align="Align.Center">@_localizer["Don't have an account?"]</MudText>
                                    <MudLink Href="/register" Underline="Underline.Hover" Typo="Typo.body2" Color="Color.Primary">Inscrever-se</MudLink>
                                </div>
*@                </MudPaper>
            </MudContainer>
        </div>
    </div>


