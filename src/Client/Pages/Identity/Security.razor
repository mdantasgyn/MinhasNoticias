@inject Microsoft.Extensions.Localization.IStringLocalizer<Security> _localizer

<EditForm Model="@_passwordModel" OnValidSubmit="ChangePasswordAsync">
    <FluentValidationValidator @ref="_fluentValidationValidator" />
    <MudCard Elevation="25" Class="rounded-lg">
        <MudCardHeader>
            <CardHeaderContent>
                <MudText>@_localizer["Mudar senha"]</MudText>
            </CardHeaderContent>
        </MudCardHeader>
        <MudCardContent>
            <MudGrid>
                <MudItem xs="12" md="8">
                    <MudTextField T="string" @bind-Value="_passwordModel.Password" For="@(() => _passwordModel.Password)" Margin="Margin.Dense" Label="@_localizer["Senha atual"]" Variant="Variant.Outlined" InputType="_currentPasswordInput" Adornment="Adornment.End" AdornmentIcon="@_currentPasswordInputIcon" OnAdornmentClick="@(() => TogglePasswordVisibility(false))" />
                </MudItem>
                <MudItem xs="12" md="8">
                    <MudTextField T="string" @bind-Value="_passwordModel.NewPassword" For="@(() => _passwordModel.NewPassword)" Margin="Margin.Dense" Label="@_localizer["Senha"]" Variant="Variant.Outlined" InputType="_newPasswordInput" Adornment="Adornment.End" AdornmentIcon="@_newPasswordInputIcon" OnAdornmentClick="@(() => TogglePasswordVisibility(true))" />
                </MudItem>
                <MudItem xs="12" md="8">
                    <MudTextField T="string" @bind-Value="_passwordModel.ConfirmNewPassword" For="@(() => _passwordModel.ConfirmNewPassword)" Margin="Margin.Dense" Label="@_localizer["Confirmação da senha"]" Variant="Variant.Outlined" InputType="_newPasswordInput" Adornment="Adornment.End" AdornmentIcon="@_newPasswordInputIcon" OnAdornmentClick="@(() => TogglePasswordVisibility(true))" />
                </MudItem>
            </MudGrid>
        </MudCardContent>
        <MudCardActions Class="pb-4 pl-4">
            <MudButton Variant="Variant.Filled" Disabled="@(!Validated)" Color="Color.Primary" ButtonType="ButtonType.Submit" Class="ml-auto">@_localizer["Mudar Senha"]</MudButton>
        </MudCardActions>
    </MudCard>
</EditForm>